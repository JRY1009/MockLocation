<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.DeviceDefault.Light">
        <!-- Customize your theme here. -->
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Bubble.TextAppearance.Dark" parent="android:TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ff7f7f7f</item>
    </style>

    <style name="Bubble.TextAppearance.Light" parent="Bubble.TextAppearance.Dark">
        <item name="android:textColor">#ffeeeeee</item>
    </style>

    <style name="NavCommonListItemTitleText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="NavCommonListItemTipsText">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#999999</item>
    </style>

    <style name="NavSettingDuringDivider">
        <item name="android:src">@drawable/nav_settings_divider_line</item>
        <item name="android:background">@drawable/nav_settings_multiline_middle_normal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:contentDescription">@null</item>

    </style>

    <style name="NavSettingDuringBtnText">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/bnav_setting_btn_text_selector</item>
    </style>
</resources>
